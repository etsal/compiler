def main
    var r is byte [32]
    def reverse: s as byte []
        var i l is int

        begin 
        l := strlen(s)
        i := 0
        loop: 
            begin
            if i < 1: 
                begin
                r[i] := s[l-i-2]
                i := i+1
                end
            else: begin break end
            end 
        r[i] := '\0'
        end

    begin
    reverse: "\n!dlrow olleH"
    writeString: r
    end
